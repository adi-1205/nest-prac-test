{{> user-nav}}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <input type="hidden" value="{{product.id}}" id="id">
            {{!-- sdaods --}}
            <div id="carouselExample" class="carousel carousel-dark slide">
                <div class="carousel-inner">
                    <div class="carousel-item pd active">
                        <img src="/{{product.image}}" class="d-block w-100" alt="Product Image 1">
                    </div>
                    {{#each product.images}}
                    <div class="carousel-item pd">
                        <img src="/{{this}}" class="d-block w-100" alt="Product Image 2">
                    </div>
                    {{/each}}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            {{!-- sdaods --}}

        </div>
        <div class="col-md-6">
            <h2>{{product.name}}</h2>
            <p>Price: {{product.price}}</p>
            <p>Available Quantity:{{product.quantity}}</p>
            <button class="btn btn-primary" id="order-now-btn">Order Now</button>
        </div>
    </div>
</div>

{{> scripts}}
<script>
    $(document).ready(function () {
        Handlers.viewProductHandler()
    })
</script>