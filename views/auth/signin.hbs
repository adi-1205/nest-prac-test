<div class="container mt-4 d-flex justify-content-center ">
    <div class="registration-form shadow p-5 rounded w-50 bg-light">
        <h1 class="text-center">Login</h1>
        <div class="mb-3 form-input-group">
            <labelclass="form-label">Mobile Number</label>
                <input type="text" class="form-control" id="mobile" value="012345678" />
                <div class="form-text form-error">Mobile Number should be non empty</div>
        </div>
        <div class="mb-3 form-input-group">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" id="password" value="Aip@12345">
            <div class="form-text form-error">
                Password should not be empty
            </div>
        </div>
        <button class="btn btn-primary" id="login-btn">Sign In</button>
    </div>
</div>

{{>scripts}}
<script>
    $(document).ready(function () {
        Handlers.signInHandler()
    })
</script>