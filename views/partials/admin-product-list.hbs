<input type="hidden" disabled value="{{count}}" id="count">
{{#each products}}
<tr>
    <td>{{this.name}}</td>
    <td>{{this.price}}</td>
    <td>{{this.quantity}}</td>
    <td data-product="{{this.json}}">
        <a href="#" class="btn btn-primary btn-sm view"><i class="fas fa-eye"></i> View</a>
        <a href="#" class="btn btn-info btn-sm update"><i class="fas fa-edit"></i> Update</a>
        <a href="#" class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt"></i> Delete</a>
    </td>
</tr>
{{/each}}