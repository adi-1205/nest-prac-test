<input type="hidden" id="count" value="{{count}}">
<tbody>
    {{#each orders}}
    <tr>
        <td><img src="/{{image}}" alt="Product Image" class="img-fluid" style="height: 50px; object-fit: contain;"></td>
        <td>{{name}}</td>
        <td>{{orderDate}}</td>
        <td>{{orderStatus}}</td>
    </tr>
    {{/each}}
</tbody>